{
  "manifest_version": 2,
  "name": "Open Manifesto Project",
  "version": "0.1",
  "author": "cairimitoaie@protonmail.com",
  "description": "__MSG_extensionDescription__",
  "default_locale": "es",
  "icons": {
    "48": "static/img/icon_48.png",
    "96": "static/img/icon_96.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Open Manifesto Project",
    "default_popup": "html/options.html",
    "default_icon": {
      "19": "static/img/icon_19.png",
      "38": "static/img/icon_38.png"
    }


  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/app.js"
      ],
      "run_at": "document_end"
    }
  ],

  "background": {
    "page": "html/background.html"
  },

  "web_accessible_resources": [
    "static/img/loading.gif"
  ],

  "permissions": [
    "*://*/*",
    "tabs",
    "menus",
    "webNavigation",
    "activeTab"
  ]
}
